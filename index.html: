<body>
  <h1>Коллекция NFT-марок</h1>
  <div class="nft-list" id="nftList"></div>

  <script>
    const nfts = [
      {
        id: "001",
        name: "Балтийский №001",
        image: "https://example.com/nft/001.png",
        price: "5 TON",
        exclusive: false
      },
      {
        id: "050",
        name: "Балтийский №050 (эксклюзив)",
        image: "https://example.com/nft/050.png",
        price: "99 TON",
        exclusive: true
      }
    ];

    const list = document.getElementById('nftList');

    nfts.forEach(nft => {
      const card = document.createElement('div');
      card.className = 'nft-card';
      card.innerHTML = `
        <img src="${nft.image}" alt="${nft.name}" />
        <h3>${nft.name}</h3>
        <p>Цена: ${nft.price}</p>
        <button class="buy-btn" onclick="buy('${nft.id}', ${nft.exclusive})">Купить</button>
        <input class="address-input" id="address-${nft.id}" placeholder="Адрес доставки" />
      `;
      list.appendChild(card);
    });

    function buy(id, isExclusive) {
      if (isExclusive) {
        const input = document.getElementById(`address-${id}`);
        input.style.display = 'block';
        input.focus();
        alert("Эта NFT — эксклюзивная. Введите адрес доставки.");
      } else {
        alert("Покупка NFT #" + id + " успешно оформлена.");
      }
    }
  </script>
